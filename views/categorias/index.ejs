<%- include('../header') %>
<br />
<a href="/categorias/nova" class="btn btn-success">Nova categoria</a>
<a href="/publicacoes/nova" class="btn btn-success">Nova Publicação</a><br /><br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Categoria</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        <% categorias.forEach(categoria => { %>
        <tr>
            <th>
                <a href="/publicacoes/categoria/<%= categoria.id %>">
                    <%= categoria.categoria %>
                </a>
            </th>
            <th>
                <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-primary">Editar</a>
                <a href="/categorias/excluir/<%= categoria.id %>" class="btn btn-danger">Excluir</a>
            </th>
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../footer') %>